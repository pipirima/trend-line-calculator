{
  "name": "pipirima/trend-line-calculator",
  "description": "Calculation of trend line parameters for a given set of chart points",
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "psr-4": {
      "Pipirima\\TrendLine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pipirima\\TrendLine\\Test\\": "tests/src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },

  "scripts": {
    "build-env": "composer install",
    "run-unit-tests": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --verbose --coverage-clover phpunit_build/logs/clover.xml"
  },
  "scripts-descriptions": {
    "build-env": "Builds environment",
    "run-unit-tests": "Runs unit tests"
  }
}
